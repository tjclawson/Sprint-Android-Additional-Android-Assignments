<animated-vector
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:aapt="http://schemas.android.com/aapt">
    <aapt:attr name="android:drawable">
        <vector
            android:name="vector"
            android:width="24dp"
            android:height="24dp"
            android:viewportWidth="24"
            android:viewportHeight="24">
            <path
                android:name="play_top"
                android:pathData="M 8 5 L 8 12 L 19 12 L 8 5 Z"
                android:fillColor="#ff0000"
                android:strokeWidth="1"/>
            <path
                android:name="play_bottom"
                android:pathData="M 8 12 L 8 19 L 19 12 L 8 12 Z"
                android:fillColor="#ff0000"
                android:strokeWidth="1"/>
        </vector>
    </aapt:attr>
    <target android:name="play_top">
        <aapt:attr name="android:animation">
            <objectAnimator
                android:propertyName="pathData"
                android:duration="600"
                android:valueFrom="M 8 5 L 8 12 L 19 12 L 8 5 Z"
                android:valueTo="M 14 5 L 14 19 L 18 19 L 18 5 Z"
                android:valueType="pathType"
                android:interpolator="@android:anim/bounce_interpolator"/>
        </aapt:attr>
    </target>
    <target android:name="play_bottom">
        <aapt:attr name="android:animation">
            <objectAnimator
                android:propertyName="pathData"
                android:duration="600"
                android:valueFrom="M 8 12 L 8 19 L 19 12 L 8 12 Z"
                android:valueTo="M 6 19 L 10 19 L 10 5 L 6 5 Z"
                android:valueType="pathType"
                android:interpolator="@android:anim/bounce_interpolator"/>
        </aapt:attr>
    </target>
</animated-vector>